<style>
    .fix_btnEx {
        margin: 0 6px !important;
    }

    .row-block {
        margin: 8px 0;
    }
</style>
<div id="collapseDiv" class="panel-collapse collapse" aria-expanded="false" role="tabpanel">
    <div class="well SearchBox">
        @using (Ajax.BeginForm("SearchData", "QLSuKien", new { Area = "QLSuKienArea" },
            new AjaxOptions()
            {
                HttpMethod = "POST",
                OnFailure = "AjaxFormError",
                OnSuccess = "AjaxSearchSuccess",
            }, new { }))
        {
            @Html.AntiForgeryToken()
            <div class="row row-block">
                <div class="col-md-6 row-block">
                    <div class="col-md-4 txt-label">Tên Sự Kiện</div>
                    <div class="col-md-8">
                        <input class="form-control width100" type="text" name="TenSuKien" />
                    </div>
                </div>
                <div class="col-md-6 row-block">
                    <div class="col-md-4 txt-label">Địa Điểm</div>
                    <div class="col-md-8">
                        <input class="form-control width100" type="text" name="DiaDiemFilter" />
                    </div>
                </div>
                <div class="col-md-6 row-block">
                    <div class="col-md-4 txt-label">Ngày Sự Kiện</div>
                    <div class="col-md-8">
                        <input class="form-control width100 txt-picker" type="text" name="NgaySuKien"  />
                    </div>
                </div>
            </div>

            <div class="col-md-12 center" style=" margin-top:20px;">
                <button id="btnSearch" type="submit" class="btn btn-labeled btn-primary btn-sm fix_btnFind">
                    <span class="btn-label p-0">
                        <i class="ri-search-line "></i>
                    </span>
                    Tìm kiếm
                </button>
                <a href="/QLSuKienArea/QLSuKien/ExportExcel" class="btn btn-labeled btn-success btn-sm fix_btnEx"><span class='btn-label p-0'><i class='ri-download-2-line'></i></span> Xuất Excel</a>
                <a aria-expanded="false" href="#collapseDiv" data-toggle="collapse" role="button" class="btn btn-labeled btn-danger btn-sm fix_btnClose">
                    <span class="btn-label p-0"><i class="ri-close-line"></i></span>
                    Đóng
                </a>
            </div>
        }
    </div>
</div>

<script>
    $(".select2").select2();
    $(".txt-picker").datepicker({
        dateFormat: 'dd/mm/yy',
        changeMonth: true,
        changeYear: true,
        yearRange: "-50:+20",
        showWeek: false,
        weekHeader: 'Tuần',
        language: 'vi',
        prevText: '<i class="fa fa-chevron-left"></i>',
        nextText: '<i class="fa fa-chevron-right"></i>',
        onSelect: function (date) {
        }
    });
</script>